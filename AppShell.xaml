<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HabitGuiderMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HabitGuiderMobileApp"
    xmlns:views="clr-namespace:HabitGuiderMobileApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="ShellTabBar">
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate views:HomeView}" Route="HomeView" />
        </Tab>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:HabitsListView}" Route="HabitsListView" />
        </Tab>
    </TabBar>

</Shell>
